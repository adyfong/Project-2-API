<body id="IconPage">
 <% icon.forEach(function(icon) { %>
  <div id="display">

    <ul>
      <li>Icon ID      : <%= icon.id%> </li>
      <li><img src="<%= icon.preview_url_42%>" alt="icon"/></li>
    </ul>
     <form action="/favorites/addFavorite" method="post" accept-charset="utf-8">
        <input type="hidden" name="icon[id]" value="<%=icon.id %>">
        <input type="hidden" name="icon[previewURL]" value="<%= icon.preview_url_42%>">
        <input type="submit" value="Add to Fav">
      </form>
  </div>
 <% }) %>

<div class='favorites'>
  <h1> FAVORITES </h1>
  <% favorites.forEach(function(fav) { %>
    <div class="result">
      <h4>Icon: <%= fav.id %></h4>
      <img class="favoriteItems" src="<%= fav.preview_url_42%>" alt="icon" />
      <form action="/favorites/deleteFavorite/<%=fav._id %>" method="post">
       <input type="hidden" name="_METHOD" value="DELETE"/>
       <input type="submit" value="Delete">
      </form>
    </div>
  <% }) %>
