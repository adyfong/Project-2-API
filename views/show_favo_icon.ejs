<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Noun Project Search</title>
    <link rel="stylesheet" href="">
</head>
<body>
  <h1>Noun Project Search</h1>
  <form action="/search/searchIcon" method="GET">
    <input type="text"  name="icon"  placeholder="Enter Search">
    <input type="submit" value="Search">
  </form>

<% icon.forEach(function(icon) { %>
  <div id="display">

    <ul>
      <li>Icon ID      : <%= icon.id%> </li>
      <li><img src="<%= icon.preview_url_42%>" alt="icon"/></li>
    </ul>
     <form action="/favorites/addFavorite" method="post" accept-charset="utf-8">
        <input type="hidden" name="icon[id]" value="<%=icon.id %>">
        <input type="hidden" name="icon[previewURL]" value="<%= icon.preview_url_42%>">
        <input type="submit" value="Add to Fav">
      </form>
  </div>
 <% }) %>

<div class='favorites'>
  <h1> FAVORITES </h1>
  <% favorites.forEach(function(fav) { %>
    <div class="result">
      <h4>Icon: <%= fav.id %></h4>
      <img class="favoriteItems" src="<%= fav.preview_url_42%>" alt="icon" />
      <form action="/favorites/deleteFavorite/<%= fav._id %>?_method=DELETE" method="post">
      <input type="submit" value="Delete">
      </form>
    </div>
  <% }) %>
  </div>

<a href="/">Search Again</a>


</body>
</html>
